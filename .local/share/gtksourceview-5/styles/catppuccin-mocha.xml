<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="catppuccin-mocha" version="1.0" name="Catppuccin Mocha">
  <description>Soothing pastel theme for GNOME Text Editor</description>

  <!-- Catppuccin Palette -->
  <color name="rosewater" value="#f5e0dc"/>
  <color name="flamingo" value="#f2cdcd"/>
  <color name="pink" value="#f5c2e7"/>
  <color name="mauve" value="#cba6f7"/>
  <color name="red" value="#f38ba8"/>
  <color name="maroon" value="#eba0ac"/>
  <color name="peach" value="#fab387"/>
  <color name="yellow" value="#f9e2af"/>
  <color name="green" value="#a6e3a1"/>
  <color name="teal" value="#94e2d5"/>
  <color name="sky" value="#89dceb"/>
  <color name="sapphire" value="#74c7ec"/>
  <color name="blue" value="#89b4fa"/>
  <color name="lavender" value="#b4befe"/>
  <color name="text" value="#cdd6f4"/>
  <color name="subtext1" value="#bac2de"/>
  <color name="subtext0" value="#a6adc8"/>
  <color name="overlay2" value="#9399b2"/>
  <color name="overlay1" value="#7f849c"/>
  <color name="overlay0" value="#6c7086"/>
  <color name="surface2" value="#585b70"/>
  <color name="surface1" value="#45475a"/>
  <color name="surface0" value="#313244"/>
  <color name="base" value="#1e1e2e"/>
  <color name="mantle" value="#181825"/>
  <color name="crust" value="#11111b"/>

  <!-- Global Settings -->
  <style name="text"                        foreground="text" background="base"/>
  <style name="selection"                   foreground="text" background="#9399b240"/>
  <style name="cursor"                      foreground="rosewater"/>
  <style name="secondary-cursor"            foreground="rosewater"/>
  <style name="current-line"                background="surface0"/>
  <style name="current-line-number"         background="surface0" foreground="lavender" bold="false"/>
  <style name="line-numbers"                background="base" foreground="surface0"/>
  <style name="draw-spaces"                 foreground="text"/>
  <style name="background-pattern"          background="base"/>

  <!-- Defaults -->
  <style name="def:base-n-integer"        foreground="text"/>
  <style name="def:boolean"               foreground="peach"/>
  <style name="def:comment"               foreground="overlay0"/>
  <style name="def:constant"              foreground="peach"/>
  <style name="def:decimal"               foreground="text"/>
  <style name="def:deletion"              strikethrough="true"/>
  <style name="def:doc-comment-element"   italic="true"/>
  <style name="def:emphasis"              italic="true"/>
  <style name="def:error"                 foreground="red"/>
  <style name="def:floating-point"        foreground="text"/>
  <style name="def:function"              foreground="blue"/>
  <style name="def:heading"               foreground="red" bold="true"/>
  <style name="def:identifier"            foreground="blue"/>
  <style name="def:inline-code"           foreground="green"/>
  <style name="def:insertion"             underline="single"/>
  <style name="def:keyword"               foreground="mauve" bold="true"/>
  <style name="def:link-destination"      foreground="blue" italic="true" underline="single"/>
  <style name="def:link-symbol"           foreground="blue" bold="true"/>
  <style name="def:link-text"             foreground="lavender"/>
  <style name="def:list-marker"           foreground="teal" bold="true"/>
  <style name="def:net-address"           italic="true" underline="single"/>
  <style name="def:note"                  background="blue" bold="true"/>
  <style name="def:operator"              foreground="sapphire"/>
  <style name="def:preformatted-section"  foreground="green"/>
  <style name="def:preprocessor"          foreground="pink"/>
  <style name="def:shebang"               foreground="overlay0" bold="true"/>
  <style name="def:special-char"          foreground="pink"/>
  <style name="def:special-constant"      foreground="pink"/>
  <style name="def:statement"             foreground="blue" bold="true"/>
  <style name="def:string"                foreground="green"/>
  <style name="def:strong-emphasis"       foreground="red" bold="true"/>
  <style name="def:thematic-break"        foreground="green" bold="true"/>
  <style name="def:type"                  foreground="yellow" bold="true"/>
  <style name="def:warning"               background="yellow"/>

  <!-- C -->
  <style name="c:boolean"                 foreground="peach"/>
  <style name="c:comment"                 foreground="overlay0"/>
  <style name="c:enum-name"               foreground="teal" bold="false"/>
  <style name="c:included-file"           foreground="green"/>
  <style name="c:keyword"                 foreground="mauve" bold="true"/>
  <style name="c:macro-name"              foreground="pink" bold="false"/>
  <style name="c:preprocessor"            foreground="pink" bold="false"/>
  <style name="c:storage-class"           foreground="peach" bold="true"/>
  <style name="c:string"                  foreground="green"/>
  <style name="c:type"                    foreground="mauve" bold="true"/>

  <!-- JavaScript -->
  <style name="js:built-in-constructor"   foreground="blue"/>
  <style name="js:built-in-function"      foreground="red"/>
  <style name="js:built-in-method"        foreground="red"/>
  <style name="js:keyword"                foreground="mauve"/>
  <style name="js:string"                 foreground="green"/>
  <style name="js:template-literal"       foreground="green"/>

  <!-- sh -->
  <style name="sh:variable"               foreground="text"/>
  <style name="sh:variable-definition"    foreground="text"/>

  <!-- Python 2 -->
  <style name="python:builtin-object"     foreground="red"/>
  <style name="python:function-name"      foreground="blue"/>
  <style name="python:keyword"            foreground="mauve" bold="false"/>
  <style name="python:module-handler"     foreground="mauve" bold="false"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               underline="single"/>
  <style name="bracket-mismatch"            foreground="text" background="red"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="text" background="crust"/>

  <!-- Search Matching -->
  <style name="search-match"                foreground="text" background="#89b4fa40"/>
</style-scheme>
